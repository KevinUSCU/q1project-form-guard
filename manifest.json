{
    "manifest_version": 2,

    "name": "Form Guard",
    "version": "0.1",
    "description": "Auto-detects and saves non-secure form data on the current page as a backup in event of a tab reload, accidental closure, or crash.",

    "icons": {
        "128": "images/icon-128.png",
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png"
    },

    "permissions": [
        "activeTab",
        "storage"
    ],

    "page_action": {
        "default_title": "Form Guard",
        "default_icon": {
            "19": "images/toolbar-19.png",
            "38": "images/toolbar-38.png"
        },
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/form-guard-injector.js"],
            "css": ["css/injector-styles.css"]
        }
    ],

    "background": {
        "scripts": ["js/form-guard-event-page.js"],
        "persistent": false
    }
}